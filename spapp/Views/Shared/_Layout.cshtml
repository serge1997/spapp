<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - spapp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/spapp.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/dt/dt-2.0.8/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/multiselect/filter_multi_select.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu/sm-core-css.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu/sm-simple.css" asp-append-version="true" />
</head>
<body>
    <header class="col-md-10 m-auto d-flex gap-3">
        <div class="w-auto d-flex align-items-center">
            <button id="sidebar-toogle" class="btn text-primary"><i class="bi bi-list"></i></button>
        </div>
        <nav class="navbar w-75 navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">spapp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div style="width:55px; top: 0; left: 0; z-index: 10; background-color:#0f766e;" id="sidebar" class="p-2 overflow-hidden position-fixed z-3 min-vh-100">
                <div class="w-100 mb-3 d-flex justify-content-end" id="sidebar-header">
                    <button class="btn text-white d-none" id="sidebar-close"><i class="bi bi-x-circle"></i></button>
                </div>
                <ul class="text-capitalize sm sm-vertical sm-simple p-2 w-100" id="main-menu">
                    <li class="list-group-item border-0">
                        <a class="d-flex gap-3 nav-link p-1 bg-none" href="#adminstration-submenu" data-bs-toggle="collapse">
                            <i class="bi bi-gear"></i>
                            Administration
                        </a>
                        <ul class="collapse nav flex-column ms-1" id="adminstration-submenu">
                            <li class="w-100 p-2">
                                <a asp-controller="City" asp-action="Index" class="nav-link px-0">
                                    <span class="d-none d-sm-inline menu-list-item">
                                        Villes
                                    </span>
                                </a>
                            </li>
                            <li class="w-100 p-2">
                                <a asp-controller="Municipality" asp-action="Index" class="nav-link px-0">
                                    <span class="d-none d-sm-inline menu-list-item">
                                        Communes
                                    </span>
                                </a>
                            </li>
                            <li class="w-100 p-2">
                                <a asp-controller="Neighborhood" asp-action="Index" class="nav-link px-0">
                                    <span class="d-none d-sm-inline menu-list-item">
                                        Quartiers
                                    </span>
                                </a>
                            </li>
                            <li class="w-100 p-2">
                                <a asp-controller="Neighborhood" asp-action="Index" class="nav-link px-0">
                                    <span class="d-none d-sm-inline menu-list-item">
                                        Agents
                                    </span>
                                </a>
                            </li>  
                            <li class="w-100 p-2">
                                <a asp-controller="ComplainTypeCategory" asp-action="Index" class="nav-link px-0">
                                    <span class="d-none d-sm-inline menu-list-item">
                                        Categorie des types de plainte
                                    </span>
                                </a>
                            </li>
                            <li class="w-100 p-2">
                                <a asp-controller="ComplainType" asp-action="Index" class="nav-link px-0">
                                    <span class="d-none d-sm-inline menu-list-item">
                                        Type de plainte
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="col-md-10 m-auto">
                <main class="w-100" role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - spapp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/app/Apispapp.js"></script>
    <script src="~/js/multiselect/filter-multi-select-bundle.min.js"></script>
    <script src="~/js/menu/jquery.smartmenus.min.js"></script>
    <script src="~/js/menu/jquery.smartmenus.bootstrap-4.min.js"></script>
    <script src="~/js/menu/jquery.smartmenus.bootstrap.min.js"></script>
    <script src="~/js/menu/jquery.smartmenus.keyboard.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/city.js"></script>
    <script src="~/js/municipality.js"></script>
    <script src="~/js/neighborhood.js"></script>
    <script src="~/js/complain-type-category.js"></script>
    <script src="~/js/complain-type.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.0.8/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
